{
  "name": "infinity-world-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:up": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate.js up --envPath .env --migration-file-language ts --tsconfig tsconfig.json -m migrations",
    "migrate:down": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate.js down --envPath .env --migration-file-language ts --tsconfig tsconfig.json -m migrations",
    "migrate:create": "node-pg-migrate create --migration-file-language ts -m migrations",
    "seed": "tsx src/seed/run.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@colyseus/ws-transport": "^0.15.0",
    "colyseus": "^0.15.0",
    "cors": "^2.8.6",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.2.1",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.11.0",
    "pino": "^10.3.1",
    "redis": "^4.6.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "@types/pino-http": "^5.8.4",
    "@types/supertest": "^6.0.3",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
