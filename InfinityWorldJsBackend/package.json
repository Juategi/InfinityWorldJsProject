{
  "name": "infinity-world-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:up": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate.js up --envPath .env --migration-file-language ts --tsconfig tsconfig.json -m migrations",
    "migrate:down": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate.js down --envPath .env --migration-file-language ts --tsconfig tsconfig.json -m migrations",
    "migrate:create": "node-pg-migrate create --migration-file-language ts -m migrations"
  },
  "dependencies": {
    "@colyseus/ws-transport": "^0.15.0",
    "colyseus": "^0.15.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.11.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0"
  }
}
